# IBM Watson Environment Configuration
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL="your_supabase_database_url"
SUPABASE_URL="your_supabase_url"
SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# Authentication
JWT_SECRET="your_jwt_secret_key"

# IBM watsonx.ai Configuration (IBM SDK Standard Format)
WATSONX_AI_AUTH_TYPE="iam"
WATSONX_API_KEY="your_ibm_cloud_api_key"
WATSONX_PROJECT_ID="your_watsonx_project_id"
WATSONX_URL="https://us-south.ml.cloud.ibm.com"

# Parser Service (Dev C Integration)
PARSER_SERVICE_URL="http://localhost:8003"

# Server Configuration
PORT=5010
NODE_ENV="development"

# Additional Watson Configuration (Optional)
# WATSONX_AI_SERVICE_URL="https://us-south.ml.cloud.ibm.com"
# WATSONX_AI_VERSION="2024-05-31"
# WATSONX_AI_MODEL_ID="ibm/granite-3-2-8b-instruct"

# SSL Configuration (if needed)
# WATSONX_AI_DISABLE_SSL="false"
# WATSONX_AI_AUTH_DISABLE_SSL="false"

# Logging and Monitoring (Optional)
# LOG_LEVEL="info"
# ENABLE_REQUEST_LOGGING="true"

# Alternative Authentication Methods (choose one):
# For Bearer Token Authentication:
# WATSONX_AI_AUTH_TYPE="bearertoken"
# WATSONX_AI_BEARER_TOKEN="your_bearer_token"

# For CP4D (Cloud Pak for Data) Authentication:
# WATSONX_AI_AUTH_TYPE="cp4d"
# WATSONX_AI_USERNAME="your_username"
# WATSONX_AI_PASSWORD="your_password"
# WATSONX_AI_URL="your_cp4d_url"